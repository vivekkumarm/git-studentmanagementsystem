@{
    ViewBag.Title = "HomePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
     .size
        {
            color: blue;
            margin: 8px;
            font-size: 25px;
        }
</style>




<div id="left">
    <div class="tree">
        <ul>
            <li><a>Pupil</a>
                <ul>
                    <li><a>@Html.ActionLink("Register Student", "AddStudent", "Student")</a></li>
                    <li><a>@Html.ActionLink("Manage Student", "Search", "Student")</a></li>
                    @* <li><a>@Html.ActionLink("View Student","ViewStudent","Student")</a></li>*@
                </ul>
            </li>
        </ul>
    </div>
</div>

<div id="right">
    <div class="tree">
        <ul>
            <li><a>Report</a>
                <ul>
                    <li><a>Student Report</a></li>

                </ul>
            </li>
        </ul>
    </div>
</div>






@section Scripts
{
    <script src="~/Scripts/jquery-ui-1.8.20.js" type="text/javascript"></script>
    @Scripts.Render("~/bundles/jqueryui");
    <script type="text/javascript">
        $(document).ready(function () {
            $('.tree li').each(function () {
                if ($(this).children('ul').length > 0) {
                    $(this).addClass('parent');
                }
            });

            $('.tree li.parent > a').click(function () {
                $(this).parent().toggleClass('active');
                $(this).parent().children('ul').slideToggle('fast').addClass("size");
            });
        });
    </script>
}
