@model StudentsBO.Student

@{
    ViewBag.Title = "AddStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddStudent</h2>


@using (Html.BeginForm())
{
    @Html.LabelFor(sm => sm.Name) 
    @Html.TextBoxFor(sm => sm.Name)
    @Html.ValidationMessageFor(sm => sm.Name)
    
    @Html.LabelFor(sm => sm.Standard) 
    @Html.TextBoxFor(sm => sm.Standard,new{placeholder="Ex: VI"})              
        @Html.ValidationMessageFor(sm => sm.Standard)

    @Html.LabelFor(sm => sm.Section) 
    @Html.TextBoxFor(sm => sm.Section) 
        @Html.ValidationMessageFor(sm => sm.Section)
     <br />

    @Html.LabelFor(sm=>sm.Gender)
    @Html.RadioButtonFor(sm => sm.Gender, 'M', true) @:Male
    @Html.RadioButtonFor(sm => sm.Gender, 'F', false) @:Female
        @Html.ValidationMessageFor(sm => sm.Gender)
             
    @Html.LabelFor(sm => sm.DateOfBirth) 
    @Html.TextBoxFor(sm => sm.DateOfBirth,
            new {placeholder="Ex:12/09/1999",id="date"})    
        @Html.ValidationMessageFor(sm => sm.DateOfBirth)     

    @Html.LabelFor(sm => sm.PhoneNumber) 
    @Html.TextBoxFor(sm => sm.PhoneNumber)             
        @Html.ValidationMessageFor(sm => sm.PhoneNumber) 

    @Html.LabelFor(sm => sm.Address) 
    @Html.TextBoxFor(sm => sm.Address)              
    @Html.ValidationMessageFor(sm => sm.Address)
   <input type="submit" value="Submit"/>
}




