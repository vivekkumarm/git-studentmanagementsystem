@section Scripts
{

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")
   
     <script type="text/javascript">
        $(document).ready(function () {
            $("#date").datepicker({
                dateFormat: 'dd/mm/yy',
                maxDate: '1m +1w +1d',
                changeMonth: true,
                changeYear: true
            });
        });
    </script>
}

